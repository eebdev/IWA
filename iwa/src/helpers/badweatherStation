import { WeatherData } from "@ctypes/types";

/**
 * Vindt een weerstation ID met ontbrekende gegevens.
 * @param {WeatherData[]} weatherDataArray - Een array van weerdata-objecten.
 * @returns {string | null} - Het ID van het weerstation met ontbrekende gegevens of null als er geen station wordt gevonden.
 **/
function badweatherStation(weatherDataArray: WeatherData[]): string | null {
  // Ga door de weerdata-array
  for (const weatherData of weatherDataArray) {
    // Ga door de sleutels (eigenschappen) van het weerdata-object
    for (const key in weatherData) {
      // Controleer of de eigenschapswaarde null is
      if (weatherData.hasOwnProperty(key)) {
        const value = weatherData[key as keyof WeatherData];
        if (value === null) {
          // Retourneer het station ID als string
          return weatherData.STN;
        }
      }
    }
  }

  // Als er geen station met ontbrekende gegevens wordt gevonden, retourneer dan null
  return null;
}